{{>breadcrumb}}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">{{pagetitle}}</h1>

    <div class="panel panel-border-wide" role="note" aria-label="Information">

      <p>Complete the following tasks for each defendant.</p>

      <ul class="list list-number">
        <li>Put case details into Libra</li>
        <li>Print and send summons from Libra</li>
        <li>If requested, book interpreter through your usual service</li>
      </ul>

    </div>

  </div>

</div>


<form class="form mt-l" method="post">

  <div class="form-group">

    <table class="table table-font-xsmall">

      <caption class="visually-hidden">Tasks for cases referred to court</caption>

      <thead>
        <tr>
          <th scope="col">Defendant name</th>
          <th scope="col"><abbr title="Unique Reference Number">URN</abbr></th>
          <th scope="col">Interpreter requested</th>
          <th scope="col">Date of hearing</th>
          <th scope="col">All tasks done?</th>
        </tr>
      </thead>


      <body>
        {{#each searches}}
          {{#if tasks}}
          <tr>
            <th scope="row"><a href="/{{../baseurl}}/case-details/{{id}}/"><span class="text-uppercase">{{personal-details.lastname}}</span> {{personal-details.firstname}}</a></th>
            <td>{{personal-details.urn}}</td>
            <td>{{#if tasks.interpreter.requested}}{{tasks.interpreter.language}}{{else}}<abbr title="No interpreter requested">&mdash;</abbr>{{/if}}</td>
            <td>{{moment tasks.date-of-hearing format="D MMM YYYY"}}</td>
            <td>
              <div class="multiple-choice">
                <input id="tasks-completed-1" name="tasks-completed" type="checkbox" value="Yes">
                <label for="tasks-completed-1"><span class="visually-hidden">Have you completed all tasks for {{personal-details.lastname}} {{personal-details.firstname}}?</span></label>
              </div>
            </td>
          </tr>
          {{/if}}
        {{/each}}
      </body>


