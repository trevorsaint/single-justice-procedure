{{>breadcrumb}}

<h1 class="heading-xlarge">{{pagetitle}}</h1>

<div class="grid-row">

  <div class="column-two-thirds">

    <form class="form" method="post" novalidate>

      <div class="form-group">

        <div class="form-search">

          <label for="search">
            <span class="form-label">Enter reference number or defendant&rsquo;s last name</span>
          </label>

          <input class="form-control form-control-wide" id="search" name="search" type="search" value="Smith"><button class="form-search-button" type="submit" disabled>Search</button>

        </div>

        <div class="panel panel-border-wide">
          <p>10 cases found</p>
        </div>

      </div>

    </form>

  </div>

</div>

<table class="table table-font-xsmall">
  <caption class="visually-hidden">Defendant cases</caption>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Reference number</th>
      <th scope="col">Date of birth</th>
      <th scope="col">Case status</th>
      <th scope="col">Notice served</th>
    </tr>
  </thead>
  <tbody>
  {{#each searches}}
    <tr>
      <th scope="row"><a href="/prosecutor/case-details/{{id}}"><span class="text-uppercase">{{personal-details.lastname}}</span> {{personal-details.firstname}}</a></th>
      <td>{{personal-details.urn}}</td>
      <td>{{moment personal-details.dob format="D MMM YYYY"}}</td>
      <td>{{{case-details.status}}}</td>
      <td>{{moment case-details.notice-served format="D MMM YYYY"}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>
