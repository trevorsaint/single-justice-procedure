{{>operational-reporting/breadcrumb}}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">{{{pagetitle}}}</h1>

    <h3 class="heading-medium">Search by date</h3>

    <form class="form" method="post" novalidate>

      <div class="form-group">

        <fieldset>
          <legend>
            <span class="form-label">From</span>
            <span class="form-hint" id="from-hint">For example, 13 6 2016</span>
          </legend>
          <div class="form-date">
            <div class="form-group form-group-day">
              <label class="form-label" for="from-day"><span class="visually-hidden">From </span>Day</label>
              <input class="form-control" id="from-day" name="from-day" type="number" aria-describedby="from-hint">
            </div>
            <div class="form-group form-group-month">
              <label class="form-label" for="from-month"><span class="visually-hidden">From </span>Month</label>
              <input class="form-control" id="from-month" name="from-month" type="number">
            </div>
            <div class="form-group form-group-year">
              <label class="form-label" for="from-year"><span class="visually-hidden">From </span>Year</label>
              <input class="form-control" id="from-year" name="from-year" type="number">
            </div>
          </div>
        </fieldset>

      </div>

      <div class="form-group">

        <fieldset>
          <legend>
            <span class="form-label">To</span>
            <span class="form-hint" id="to-hint">For example, 13 7 2016</span>
          </legend>
          <div class="form-date">
            <div class="form-group form-group-day">
              <label class="form-label" for="to-day"><span class="visually-hidden">To </span>Day</label>
              <input class="form-control" id="to-day" name="to-day" type="number" aria-describedby="to-hint">
            </div>
            <div class="form-group form-group-month">
              <label class="form-label" for="to-month"><span class="visually-hidden">To </span>Month</label>
              <input class="form-control" id="to-month" name="to-month" type="number">
            </div>
            <div class="form-group form-group-year">
              <label class="form-label" for="to-year"><span class="visually-hidden">To </span>Year</label>
              <input class="form-control" id="to-year" name="to-year" type="number">
            </div>
          </div>
        </fieldset>

      </div>

      <div class="form-group form-group-related">
        <button class="button" type="submit">Find</button>
      </div>

      <p><a href="/{{baseurl}}/home/">Cancel</a></p>

    </form>

  </div>

</div>
