{{>breadcrumb}}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge"><span class="heading-secondary">Transport for London</span> {{pagetitle}}</h1>

    <h2 class="heading-medium">Search for a case</h2>

    <form class="form" method="post" action="/search-for-a-case">

      <div class="form-group">

        <div class="form-search">

          <label for="search">
            <span class="form-label">Enter reference number or defendant&rsquo;s last name</span>
          </label>

          <input class="form-control form-control-wide" type="search" id="search" name="search"><button class="form-search-button" type="submit">Search</button>

        </div>

      </div>

    </form>

  </div>

</div>

<div class="grid-row">

  <div class="column-two-thirds">

    <h2 class="heading-medium" id="send-data-files-to-court">Send data files to court</h2>

    <ul class="list" aria-labelledby="send-data-files-to-court">
      <li><p ><a href="/send-data-files">Upload header and offence CSVs</a></p></li>
      <li><p ><a href="/check-csv-uploads">Check CSV uploads</a></p></li>
    </ul>

    <h2 class="heading-medium" id="sjp-nptices-and-other-documents">Send <abbr title="Single Justice Procedure">SJP</abbr> notices and other documents</h2>

    <ul class="list" aria-labelledby="sjp-nptices-and-other-documents">
      <li><p><a href="/send-other-documents">Upload SJP notices, previous convictions and witness statements</a></p></li>
      <li><p><a href="/check-document-uploads">Check document uploads</a></p></li>
    </ul>

    <h2 class="heading-medium" id="other-tasks">Other tasks</h2>

    <ul class="list" aria-labelledby="other-tasks">
      <li><p><a href="/withdraw-an-offence">Withdraw an offence</a></p></li>
      <li><p><a href="/export-case-results-by-date">Export case results by date</a></p></li>
    </ul>

  </div>

  <div class="column-third">

    <div class="summary-item mt-xl">
      <a href="/check-csv-uploads">
        <span class="summary-item-number bold-xxlarge">4</span>
        <span class="summary-item-label font-xsmall">CSV errors in last upload</span>
      </a>
    </div>

    <div class="summary-item mt-m">
      <a href="/check-document-uploads">
        <span class="summary-item-number bold-xxlarge">3</span>
        <span class="summary-item-label font-xsmall">document errors in last upload</span>
      </a>
    </div>

    <div class="summary-item mt-m">
      <a href="/cases-missing-sjp-notices">
        <span class="summary-item-number bold-xxlarge">5</span>
        <span class="summary-item-label font-xsmall">cases missing SJP notices</span>
      </a>
    </div>

  </div>

</div>
