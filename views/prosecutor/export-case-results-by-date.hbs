  {{>breadcrumb}}

  <div class="grid-row">

    <div class="column-two-thirds">

      <h1 class="heading-xlarge">{{pagetitle}}</h1>

      <form class="form">

        <div class="form-group">

          <fieldset>
            <legend>
              <span class="form-label-bold">From</span>
              <span class="form-hint" id="from-hint">For example, 13 6 2016</span>
            </legend>
            <div class="form-date">
              <div class="form-group form-group-day">
                <label class="form-label" for="from-day">Day</label>
                <input class="form-control" id="from-day" name="from-day" type="number" pattern="[0-9]*" min="0" max="31" aria-describedby="from-hint">
              </div>
              <div class="form-group form-group-month">
                <label class="form-label" for="from-month">Month</label>
                <input class="form-control" id="from-month" name="from-month" type="number" pattern="[0-9]*" min="0" max="12">
              </div>
              <div class="form-group form-group-year">
                <label class="form-label" for="from-year">Year</label>
                <input class="form-control" id="from-year" name="from-year" type="number" pattern="[0-9]*" min="0" max="2016">
              </div>
            </div>
          </fieldset>

        </div>

        <div class="form-group">

          <fieldset>
            <legend>
              <span class="form-label-bold">To</span>
              <span class="form-hint" id="to-hint">For example, 13 7 2016</span>
            </legend>
            <div class="form-date">
              <div class="form-group form-group-day">
                <label class="form-label" for="to-day">Day</label>
                <input class="form-control" id="to-day" name="to-day" type="text" pattern="[0-9]*" min="0" max="31" aria-describedby="to-hint">
              </div>
              <div class="form-group form-group-month">
                <label class="form-label" for="to-month">Month</label>
                <input class="form-control" id="to-month" name="to-month" type="text" pattern="[0-9]*" min="0" max="12">
              </div>
              <div class="form-group form-group-year">
                <label class="form-label" for="to-year">Year</label>
                <input class="form-control" id="to-year" name="to-year" type="text" pattern="[0-9]*" min="0" max="2016">
              </div>
            </div>
          </fieldset>

        </div>

        <button class="button" type="submit">Search</button>

      </form>

      <h3 class="heading-medium">20 case results found</h3>

      <p><a class="button button-secondary" href="#" role="button">Download results in CSV file</a></p>

    </div>

  </div>
