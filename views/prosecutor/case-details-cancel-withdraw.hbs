{{>breadcrumb}}

{{#with search}}

  {{>prosecutor/persist-info}}

  <div class="grid-row">

    <div class="column-two-thirds">

      {{#with personal-details}}
      <h1 class="heading-xlarge mb-l">{{{firstname}}} <span class="text-uppercase">{{{lastname}}}</span></h1>

      <p class="mb-xl">
        <time datetime="{{moment dob format="YYYY-MM-DD"}}">{{moment dob format="D MMM YYYY"}}</time> ({{{age}}} years old)<br>
        {{{address.address1}}},
        {{#if address.address2}}{{{address.address2}}},{{/if}}
        {{{address.town}}}
        <span class="text-uppercase">{{{address.postcode}}}</span>
      </p>
      {{/with}}

      <div class="tabs tabs-horizontal">

        <div class="tabs-header">

          <ul class="list">
            <li><a href="#case-details">Case details</a></li>
            <li><a href="#personal-details">Personal details</a></li>
            <li><a href="#documents">Documents</a></li>
          </ul>

        </div>

        <div class="tabs-content">

          <section id="case-details">

            <h2 class="heading-medium">Case details</h2>

            {{#with case-details}}
            <dl class="meta meta-inline meta-boldterms">
              <dt>Case status</dt>
              <dd>{{{status}}}</dd>
              <dt>Prosecutor</dt>
              <dd>{{{prosecutor}}}</dd>
              <dt><abbr title="Single Justice Procedure">SJP</abbr> notice served</dt>
              <dd><time datetime="{{moment notice-served format="YYYY-MM-DD"}}">{{moment notice-served format="D MMM YYYY"}}</time></dd>
            </dl>
            {{/with}}

          </section>

          <section id="personal-details">

            <h2 class="heading-medium">Personal details</h2>

            {{#with personal-details}}
            <dl class="meta meta-inline meta-boldterms">
              <dt>Name</dt>
              <dd>{{{firstname}}} <span class="text-uppercase">{{{lastname}}}</span></dd>
              <dt>Date of birth</dt>
              <dd><time datetime="{{moment dob format="YYYY-MM-DD"}}">{{moment dob format="D MMM YYYY"}}</time> ({{{age}}} years old)</dd>
              <dt>Address</dt>
              <dd>{{{address.address1}}} <br> {{#if address.address2}}{{{address.address2}}} <br> {{/if}} {{{address.town}}} <br> {{{address.postcode}}}</dd>
              <dt>Email</dt>
              <dd>{{#if email}}{{{email}}}{{else}}&ndash;{{/if}}</dd>
              <dt>Home telephone</dt>
              <dd>{{#if phone}}{{{phone}}}{{else}}&ndash;{{/if}}</dd>
              <dt>Mobile</dt>
              <dd>{{#if mobile}}{{{mobile}}}{{else}}&ndash;{{/if}}</dd>
              <dt>National Insurance number</dt>
              <dd>{{#if national-insurance-number}}{{{national-insurance-number}}}{{else}}&ndash;{{/if}}</dd>
            </dl>
            {{/with}}

          </section>

          <section id="documents">

            <h2 class="heading-medium">Documents</h2>

            {{#with case-details}}
            <dl class="meta meta-inline meta-boldterms">
              <dt>Uploaded files</dt>
              <dd>
                {{#each ../related-documents.document}}
                <div class="document document-small">
                  <i class="icon icon-file-download"></i>
                  <div class="document-content">
                    <p class="document-title"><a href="#" target="_blank">{{{title}}} <span class="visually-hidden">(opens in a new window)</span></a></p>
                    <div class="document-meta">
                      <span class="document-meta-details">
                        {{{file-type}}}, {{{file-size}}}, {{{file-pages}}}
                      </span>
                    </div>
                  </div>
                </div>
                {{/each}}
              </dd>
            </dl>
            {{/with}}

          </section>

        </div>

      </div>

    </div>

    {{#if withdraw}}
     <div class="column-third">

       <div class="related">

         <div class="related-section">

           <h2 class="related-heading">Case options</h2>

           <ul class="related-links">
             <li><a href="/prosecutor/withdraw-offence/{{id}}">Withdraw offence</a></li>
           </ul>

         </div>

       </div>

     </div>
     {{/if}}

     {{#if cancel-withdrawal}}
     <div class="column-third">

       <div class="related">

         <div class="related-section">

           <h2 class="related-heading">Case options</h2>

           <ul class="related-links">
             <li><a href="/prosecutor/cancel-request-to-withdraw-offence/{{id}}">Cancel withdrawal of offence</a></li>
           </ul>

         </div>

       </div>

     </div>
     {{/if}}

  </div>

  <hr class="divider divider-border-dark" aria-hidden="true">

  <div aria-labelledby="offences">

