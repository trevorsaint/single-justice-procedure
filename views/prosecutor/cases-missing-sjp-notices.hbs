  {{>breadcrumb}}

  <h1 class="heading-xlarge">{{{pagetitle}}}</h1>

  <div class="grid-row">

    <div class="column-two-thirds">

      <h3 class="heading-medium">5 cases missing notices</h3>

      <table class="table table-font-xsmall text">
        <caption class="visuallyhidden">Cases missing SJP notices</caption>
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Reference number</th>
            <th scope="col">Date of birth</th>
          </tr>
        </thead>
        <tbody>
          {{#each searches}}
            {{#if missing-sjp}}
            <tr>
              <td>{{uppercase lastname}} {{firstname}}</td>
              <td>{{urn}}</td>
              <td>{{date-of-birth}}</td>
            </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>

    </div>

    <div class="column-one-third">

      <h3 class="heading-medium">Send notices to court</h3>

      <p>Upload the <abbr title="Single Justice Procedure">SJP</abbr> notices in a zip file.</p>

      <div class="panel panel-border-wide">
        <p class="font-xsmall">If you only want to upload one document, you&rsquo;ll still need to put it in a zip file.</p>
      </div>

      <form class="form" method="post" action="">

        <div class="form-group">
          <input class="form-control-file" type="file" id="notices" name="notices" accept=".zip">
          <label class="button button-secondary" for="notices">Browse&hellip;</label>
        </div>

        <button class="button" type="submit">Send to court</button>

      </form>

    </div>

  </div>
