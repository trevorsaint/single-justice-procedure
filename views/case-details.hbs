  <div class="breadcrumbs">
    <ol>
      <li><a href="/">Case tasks</a></li>
      <li><a href="/search-for-a-case/">Search for a case</a></li>
      <li>{{search.firstname}} {{search.lastname}}</li>
    </ol>
  </div>
  
  
  <div class="grid-row">
    
    
    <div class="column-two-thirds">
      
      
      <h1 class="heading-xlarge">{{search.firstname}} {{search.lastname}} <span class="heading-secondary">{{search.urn}}</span></h1>


      <section aria-labelledby="personal-details">

        <h2 class="bold-medium" id="personal-details">Personal details</h2>
        
        <dl class="summary">
          <dt>Gender</dt>
          <dd>{{search.gender}}</dd>
          <dt>Date of birth</dt>
          <dd>12 Jan 2016 (age {{search.age}})</dd>
          <dt>Address</dt>
          <dd>{{search.address.address1}}, <br> {{search.address.town}}, <br> {{search.address.postcode}}</dd>
          <dt>Email</dt>
          <dd>{{#if search.email}}<a href="mailto:{{search.email}}">{{search.email}}</a>{{else}}-{{/if}}</dd>
          <dt>Phone</dt>
          <dd>{{#if search.phone}}{{search.phone}}{{else}}-{{/if}}</dd>
          <dt>National Insurance number</dt>
          <dd>{{#if search.national-insurance-number}}{{search.national-insurance-number}}{{else}}-{{/if}}</dd>
        </dl>
      
      </section>
      
      
      <hr>
      

      <section aria-labelledby="case-details">

        <h2 class="bold-medium" id="case-details">Case details</h2>
        
        <dl class="summary">
          <dt>Prosecutor</dt>
          <dd>Transport for London</dd>
          <dt>Charge date</dt>
          <dd>21 January 2016</dd>
          <dt>Notice served</dt>
          <dd>2 February 2016</dd>
          <dt>Documents</dt>
          <dd>
            
            <ul class="list list-file-downloads">
              
              {{#each search.related-documents.document}}
              <li class="file-download">
                
                <i class="icon icon-file-download"></i>
                
                <div class="file-download-content">
                  <a href="{{file-path}}">{{title}}</a> 
                  <span class="file-download-meta">{{file-type}}, {{file-size}}</span>
                </div>
                
              </li>
              {{/each}}
              
            </ul>
          
          </dd>
          
        </dl>
      
      </section>
      
      
      <hr>
      
      
      <section aria-labelledby="offences">
        
          
        <h2 class="bold-medium" id="offences">2 offences</h2>
        
        
        {{#each search.offences.offence}}
        <section>
          
          <h3 class="heading-small">{{{title}}}</h3>
          
          <p class="font-xsmall">On {{date}}</p>
          
          <div class="panel panel-border-narrow">
              
            <h4 class="bold-xsmall">Statement of facts</h4>
            <p class="font-xsmall">{{{statement-of-facts}}}</p>
        
          </div>
          
          <p><a href="/withdraw-offence/{{../search.id}}">Withdraw offence</a></p>
          
        </section>
        {{/each}}
  
        
      </section>
      
      
      <hr>
      
      
      <section aria-labelledby="personal-details">

        <h2 class="bold-medium" id="personal-details">Collection and payment terms imposed</h2>
        
        <dl class="summary">
          <dt>Collection order made</dt>
          <dd>Yes</dd>
          <dt>Amount due</dt>
          <dd>&pound;347.12</dd>
          <dt>Payment method</dt>
          <dd>Direct to Court</dd>
          <dt>Lump sum amount</dt>
          <dd>&pound;347.12</dd>
          <dt>Pay by date</dt>
          <dd>24 July 2015</dd>
        </dl>
      
      </section>
      
      
    </div>
    
    
    <div class="column-third">
      
      <div class="related">
    
        <div class="related-section">
          
          <h2 class="related-title">Tasks</h2>
          
          <ul class="list">
            <li><a href="/send-other-documents">Send documents to court</a></li>
            <li><a href="/withdraw-case/{{search.id}}">Withdraw case</a></li>
          </ul>
          
        </div>
      
      </div>
      
    </div>
    
    
  </div>