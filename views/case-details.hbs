  <div class="breadcrumbs">
    <ol>
      <li><a href="/case-tasks">Case tasks</a></li>
      <li><a href="/search-for-a-case/">Search for a case</a></li>
      <li>{{search.firstname}} {{search.lastname}}</li>
    </ol>
  </div>
  
  
  <div class="persist-info">
    <span class="persist-info-reference">{{search.urn}}</span>
    <span class="persist-info-title">{{search.firstname}} {{search.lastname}}</span>
  </div>
  
  
  <div class="grid-row">
    
    
    <div class="column-two-thirds">
      

      <div class="personal-details">
        <div>Born {{search.date-of-birth}} (age {{search.age}})</div>
        <div>{{search.address.address1}}, {{search.address.town}} {{search.address.postcode}}</div>
        <div>{{search.phone}}</div>
        {{#if search.email}}<div><a href="mailto:">{{search.email}}</a></div>{{/if}}
        {{#if search.national-insurance-number}}<div>{{search.national-insurance-number}}</div>{{/if}}
      </div>

    
      <dl class="description description-inline">
        <dt>Case status</dt>
        <dd>{{{search.case-details.status}}}</dd>
        <dt>Prosecutor</dt>
        <dd>{{search.case-details.prosecutor}}</dd>
        <dt>Notice served</dt>
        <dd><time datetime="{{search.case-details.notice-served-datetime}}">{{search.case-details.notice-served}}</time></dd>
        <dt>Documents</dt>
        <dd>
          <ul>
            {{#each search.related-documents.document}}
            <li class="file file-inline">
              <i class="icon icon-file-download"></i>
              <div class="file-details">
                <a href="{{file-path}}">{{title}}</a> 
                <span class="file-meta">{{file-type}}, {{file-size}}</span>
              </div>
            </li>
            {{/each}}
          </ul>
        </dd>
      </dl>
      
      
      {{#if search.withdraw}}<a href="/withdraw-case/{{search.id}}">Withdraw case</a>{{/if}}
      
      
    </div>
    
    
    <div class="column-third">
      
      <figure class="figure">
        <img src="http://placehold.it/610x160">
      </figure>
      
    </div>
    
    
  </div>
  
  
  <hr>
  
  
  <section aria-labelledby="offences">
    
    <h2 class="bold-large" id="offences">2 offences</h2>
  
    {{#each search.offences.offence}}
    <div class="grid-row">
      
      <div class="column-two-thirds">
        
        <section>
          
          <header>
            <h3 class="heading-small">{{id}}. {{{title}}}</h3>
            <p class="font-xsmall">On <time datetime="{{datetime}}">{{date}}</time></p>
          </header>
          
          <p><strong class="tag">{{plea}}</strong></p>
          
          <div class="panel panel-border-narrow">
            <p class="font-xsmall"><strong class="bold-xsmall">Statement of facts</strong> <br> {{{statement-of-facts}}}</p>
          </div>
          
          {{#if ../search.decision-made}}<table class="table table-font-xsmall">
            <thead>
              <tr>
                <th colspan="2">Court decisions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Verdict</td>
                <td>Guilty plea accepted</td>
              </tr>
              <tr>
                <td>Fine</td>
                <td>&pound;100</td>
              </tr>
              <tr>
                <td>Compensation</td>
                <td>&pound;3.50</td>
              </tr>
              <tr>
                <td>Guilty plea <abbr title="Taken into Consideration">TIC</abbr></td>
                <td>Yes</td>
              </tr>
            </tbody>
          </table>{{/if}}
          
          {{#if ../search.withdraw}}<p><a href="/withdraw-offence/{{../search.id}}">Withdraw offence</a></p>{{/if}}
          
        </section>
        
      </div>
      
      {{#if ../search.decision-ready}}<div class="column-third">
        
        <aside>
          
          <h3 class="heading-small">Make a decision</h3>
          
          <form class="form">
            
            <fieldset>
  
              <legend class="visually-hidden">Make a decision</legend>
          
              <div class="form-group">
          
                <label class="block-label" for="financial-penalty-{{id}}">
                  <input id="financial-penalty-{{id}}" type="radio" name="make-a-decision-{{id}}">
                  Financial penalty
                </label>
          
                <label class="block-label" for="no-seperate-penalty-{{id}}">
                  <input id="no-seperate-penalty-{{id}}" type="radio" name="make-a-decision-{{id}}">
                  No seperate penalty
                </label>
          
                <label class="block-label" for="refer-for-court-hearing-{{id}}">
                  <input id="refer-for-court-hearing-{{id}}" type="radio" name="make-a-decision-{{id}}">
                  Refer for court hearing
                </label>
                
                <label class="block-label" for="widthdraw-{{id}}">
                  <input id="widthdraw-{{id}}" type="radio" name="make-a-decision-{{id}}">
                  Withdraw
                </label>
                
                <label class="block-label" for="discharge-{{id}}">
                  <input id="discharge-{{id}}" type="radio" name="make-a-decision-{{id}}">
                  Discharge
                </label>
                
                <label class="block-label" for="dismiss-{{id}}">
                  <input id="dismiss-{{id}}" type="radio" name="make-a-decision-{{id}}">
                  Dismiss
                </label>
          
              </div>
          
            </fieldset>
            
          </form>
        
        </aside>
        
      </div>{{/if}}
      
    </div>
    {{/each}} 
  
  </section>
  
  
  {{#if search.decision-ready}}<p><a class="button" href="#" role="button">Save and continue</a></p>{{/if}}