{{>breadcrumb}}

{{#with search}}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">Manage documents</h1>

    <section aria-labelledby="uploaded-documents">

      <h2 class="heading-medium" id="uploaded-documents">Uploaded documents</h2>

      <table class="table table-font-xsmall">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Uploaded on</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each related-documents.document}}
          <tr>
            <td>
              <div class="document document-small">
                <i class="icon icon-file-download"></i>
                <div class="document-content">
                  <p class="document-title"><a href="#">{{{title}}}</a></p>
                  <div class="document-meta">
                    <span class="document-meta-details">
                      {{{file-type}}}, {{{file-size}}}, {{{file-pages}}}
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td><time datetime="">15 Jan 2016</time></td>
            <td><a href="#">Remove</a></td>
          </tr>
          {{/each}}

        </tbody>
      </table>

    </section>

    <section aria-labelledby="add-other-documents">

      <h2 class="heading-medium" id="add-other-documents">Add other documents</h2>

      <p>You can upload any of the following documents if available.</p>

      <form class="form" method="post" action="/">

        <h2 class="heading-small">Select SJP notice</h2>
        <div class="form-group">
          <input class="form-control-file" type="file" id="sjp-notice" name="sjp-notice">
          <label class="button button-secondary" for="sjp-notice">Browse&hellip;</label>
        </div>

        <h2 class="heading-small">Select previous convictions</h2>
        <div class="form-group">
          <input class="form-control-file" type="file" id="previous-convictions" name="previous-convictions">
          <label class="button button-secondary" for="previous-convictions">Browse&hellip;</label>
        </div>

        <h2 class="heading-small">Select statement of income and outgoings (MC100)</h2>
        <div class="form-group">
          <input class="form-control-file" type="file" id="statement-income" name="statement-income">
          <label class="button button-secondary" for="statement-income">Browse&hellip;</label>
        </div>

        <h2 class="heading-small">Select witness statement</h2>
        <div class="form-group">
          <input class="form-control-file" type="file" id="witness-statement" name="witness-statement">
          <label class="button button-secondary" for="witness-statement">Browse&hellip;</label>
        </div>

        <h2 class="heading-small">Select plea document</h2>
        <div class="form-group form-group-last">
          <input class="form-control-file" type="file" id="plea-document" name="plea-document">
          <label class="button button-secondary" for="plea-document">Browse&hellip;</label>
        </div>

        <div class="form-group form-group-actions">
          <button class="button" type="submit">Upload</button>
          <p><a href="#">Done &ndash; go back to case</a></p>
        </div>

      <form>

    </section>

  </div>

</div>

{{/with}}
