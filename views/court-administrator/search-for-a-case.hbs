{{>breadcrumb}}

<h1 class="heading-xlarge">{{pagetitle}}</h1>

<div class="grid-row">

  <div class="column-two-thirds">

    <form class="form" method="post">

      <div class="form-group">

        <div class="form-search">

          <label for="search">
            <span class="form-label">Enter case reference number or defendant&rsquo;s last name</span>
          </label>

          <input class="form-control form-control-wide" type="search" id="search" name="search"><a class="form-search-button" href="/court-administrator/search-for-a-case/">Search</a>

        </div>

        <div class="panel panel-border-wide">
          <p>10 cases found</p>
        </div>

      </div>

    </form>

  </div>

</div>

<table class="table table-font-xsmall">
  <caption class="visually-hidden">Defendant cases</caption>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Case reference number</th>
      <th scope="col">Date of birth</th>
      <th scope="col">Case status</th>
      <th scope="col">Notice served</th>
    </tr>
  </thead>
  <tbody>
  {{#each searches}}
    <tr>
      <th scope="row"><a href="/court-administrator/case-details/{{id}}/">{{uppercase personal-details.lastname}} {{personal-details.firstname}}</a></th>
      <td>{{personal-details.urn}}</td>
      <td>{{moment personal-details.dob format="D MMM YYYY"}}</td>
      <td>{{{case-details.status}}}</td>
      <td>{{moment case-details.notice-served format="D MMM YYYY"}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>
