{{>breadcrumb}}

{{#with search}}

<div class="persist-info">
  <span class="persist-info-reference">{{urn}}</span>
  <span class="persist-info-title">
    {{#and ../sFirstname ../sLastname}}
      {{../sFirstname}} {{uppercase ../sLastname}}
    {{else}}
      {{firstname}} {{uppercase lastname}}
    {{/and}}
  </span>
</div>

<h1 class="heading-xlarge">{{../pagetitle}}</h1>

<form class="form" method="post">

  <div class="form-group">

    <fieldset>

      <legend>
        <span class="form-label-bold">Date order given to reopen this case</span>
        <span class="form-hint" id="date-hint">For example, 31 3 2016</span>
      </legend>

      <div class="form-date">

        <div class="form-group form-group-day">
          <label class="form-label" for="dob-day">Day</label>
          <input class="form-control" type="number" id="dob-day" aria-describedby="dob-hint">
        </div>

        <div class="form-group form-group-month">
          <label class="form-label" for="dob-month">Month</label>
          <input class="form-control" type="number" id="dob-month">
        </div>

        <div class="form-group form-group-year">
          <label class="form-label" for="dob-year">Year</label>
          <input class="form-control" type="number" id="dob-year">
        </div>

      </div>

    </fieldset>

  </div>

  <div class="form-group form-group-last">
    <label for="libra-account-number">
      <span class="form-label-bold">Libra account number for this case</span>
    </label>
    <input class="form-control form-control-1-2" type="text" id="libraa-ccount-number" name="libraAccountNumber">
  </div>

  <div class="form-group form-group-related">
    <button class="button" type="submit">Save</button>
  </div>

  <p><a href="#">Cancel</a></p>

</form>

{{/with}}
