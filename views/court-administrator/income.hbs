{{>breadcrumb}}

{{#with search}}

{{>court-administrator/persist-info}}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">{{../pagetitle}}</h1>

    <form class="form" method="post" novalidate>

      <div class="form-group">
        <label for="national-insurance">
          <span class="form-label-bold">National Insurance number (optional)</span>
          <span class="form-hint">For example, VO 12 34 56 D</span>
        </label>
        <input class="form-control form-control-3-4" id="national-insurance" name="nationalInsurance" type="text" {{#if ../sNationalInsurance}} value="{{../sNationalInsurance}}"{{else}} value="{{national-insurance-number}}"{{/if}}>
      </div>

      <div class="form-group">

        <fieldset class="inline">

          <legend>
            <span class="form-label-bold">Frequency of income and outgoings</span>
            <span class="form-hint">Check the form to see what the defendant has ticked</span>
          </legend>

          <div class="multiple-choice">
            <input id="pay-frequency-weekly" name="payFrequency" type="radio" value="Weekly"{{#if ../sPayFrequency}}{{#contains ../sPayFrequency "Weekly"}} checked="checked"{{/contains}}{{else}}{{#contains employment.pay.frequency "Weekly"}} checked="checked"{{/contains}}{{/if}}>
            <label for="pay-frequency-weekly">Weekly</label>
          </div>

          <div class="multiple-choice">
            <input id="pay-frequency-fortnightly" name="payFrequency" type="radio" value="Fortnightly"{{#if ../sPayFrequency}}{{#contains ../sPayFrequency "Fortnightly"}} checked="checked"{{/contains}}{{else}}{{#contains employment.pay.frequency "Fortnightly"}} checked="checked"{{/contains}}{{/if}}>
            <label for="pay-frequency-fortnightly">Fortnightly</label>
          </div>

          <div class="multiple-choice">
            <input id="pay-frequency-monthly" name="payFrequency" type="radio" value="Monthly"{{#if ../sPayFrequency}}{{#contains ../sPayFrequency "Monthly"}} checked="checked"{{/contains}}{{else}}{{#contains employment.pay.frequency "Monthly"}} checked="checked"{{/contains}}{{/if}}>
            <label for="pay-frequency-monthly">Monthly</label>
          </div>

        </fieldset>

      </div>

      <div class="form-group">
        <label for="pay-amount">
          <span class="form-label-bold">Net income</span>
        </label>
        <div class="form-currency">
          <input class="form-control form-control-1-4" id="pay-amount" name="payAmount" type="text"{{#if ../sPayAmount}} value="{{../sPayAmount}}"{{else}} value="{{employment.pay.amount}}"{{/if}}>
        </div>
      </div>

      <div class="form-group">

        <fieldset>

          <legend>
            <span class="form-label-bold">Employment status</span>
          </legend>

          <div class="multiple-choice" data-target="employed">
            <input id="employment-status-employed" name="employmentStatusEmployed" type="checkbox" value="Employed"{{#if ../sEmploymentStatusEmployed}}{{#contains ../sEmploymentStatusEmployed "Employed"}} checked="checked"{{/contains}}{{/if}}>
            <label for="employment-status-employed">Employed</label>
          </div>

          <div class="panel panel-border-narrow js-hidden" id="employed">

            <div class="form-group">

              <fieldset>

                <legend class="heading-medium">Employment details</legend>

                <div class="form-group">
                  <label class="form-label" for="employee-number">Employee number (optional)</label>
                  <input class="form-control" id="employee-number" name="employeeNumber" type="text"{{#if ../sEmployeeNumber}} value="{{../sEmployeeNumber}}"{{/if}}>
                </div>

                <div class="form-group">
                  <label class="form-label" for="employer-name">Employer name</label>
                  <input class="form-control form-control-3-4" id="employer-name" name="employerName" type="text"{{#if ../sEmployerName}} value="{{../sEmployerName}}"{{/if}}>
                </div>

                <div class="form-group form-group-compound">
                  <label class="form-label" for="employer-address-line-1">Building and street</label>
                  <input class="form-control form-control-3-4" id="employer-address-line-1" name="employerAddressLine1" type="text"{{#if ../sEmployerAddressLine1}} value="{{../sEmployerAddressLine1}}"{{/if}}>
                </div>

                <div class="form-group form-group-compound">
                  <label class="visually-hidden" for="employer-address-line-2">Building and street address line 2</label>
                  <input class="form-control form-control-3-4" id="employer-address-line-2" name="employerAddressLine2" type="text"{{#if ../sEmployerAddressLine2}} value="{{../sEmployerAddressLine2}}"{{/if}}>
                </div>

                <div class="form-group">
                  <label class="visually-hidden" for="employer-address-line-3">Building and street address line 3</label>
                  <input class="form-control form-control-3-4" id="employer-address-line-3" name="employerAddressLine3" type="text"{{#if ../sEmployerAddressLine3}} value="{{../sEmployerAddressLine3}}"{{/if}}>
                </div>

                <div class="form-group">
                  <label class="form-label" for="employer-town-or-city">Town or city</label>
                  <input class="form-control" id="employer-town-or-city" name="employerTownOrCity" type="text"{{#if ../sEmployerTownOrCity}} value="{{../sEmployerTownOrCity}}"{{/if}}>
                </div>

                <div class="form-group">
                  <label class="form-label" for="employer-postcode">Postcode</label>
                  <input class="form-control form-control-1-4" id="employer-postcode" name="employerPostcode" type="text"{{#if ../sEmployerPostcode}} value="{{../sEmployerPostcode}}"{{/if}}>
                </div>

                <div class="form-group">
                  <label class="form-label" for="employer-telephone">Employer telephone (optional)</label>
                  <input class="form-control" id="employer-telephone" name="employerTelephone" type="tel"{{#if ../sEmployerTelephone}} value="{{../sEmployerTelephone}}"{{/if}}>
                </div>

              </fieldset>

            </div>

          </div>

          <div class="multiple-choice">
            <input id="employment-self-employed" name="employmentStatusSelfEmployed" type="checkbox" value="Self employed" {{#if ../sEmploymentStatusSelfEmployed}}{{#contains ../sEmploymentStatusSelfEmployed "Self employed"}} checked="checked"{{/contains}}{{/if}}>
            <label for="employment-self-employed">Self&ndash;employed</label>
          </div>

          <div class="multiple-choice">
            <input id="employment-status-other" name="employmentStatusOther" type="checkbox" value="Other" {{#if ../sEmploymentStatusOther}}{{#contains ../sEmploymentStatusOther "Other"}} checked="checked"{{/contains}}{{/if}}>
            <label for="employment-status-other">Other (for example, retired, student)</label>
          </div>

        </fieldset>

      </div>

      <div class="form-group">

        <fieldset class="inline">

          <legend>
            <span class="form-label-bold">Claiming Jobseeker’s Allowance, Employment Support Allowance, Universal Credit or Income Support?</span>
          </legend>

          <div class="multiple-choice">
            <input id="receiving-benefits-yes" name="receivingBenefits" type="radio" value="Yes"{{#if ../sReceivingBenefits}}{{#contains ../sReceivingBenefits "Yes"}} checked="checked"{{/contains}}{{else}}{{#contains employment.receiving-benefits "Yes"}} checked="checked"{{/contains}}{{/if}}>
            <label for="receiving-benefits-yes">Yes<span class="visually-hidden"> is receiving benefits</span></label>
          </div>

          <div class="multiple-choice">
            <input id="receiving-benefits-no" name="receivingBenefits" type="radio" value="No"{{#if ../sReceivingBenefits}}{{#contains ../sReceivingBenefits "No"}} checked="checked"{{/contains}}{{else}}{{#contains employment.receiving-benefits "No"}} checked="checked"{{/contains}}{{/if}}>
            <label for="receiving-benefits-no">No<span class="visually-hidden"> is not receiving benefits</span></label>
          </div>

          <div class="multiple-choice">
            <input id="receiving-benefits-unknown" name="receivingBenefits" type="radio" value="Don’t know"{{#if ../sReceivingBenefits}}{{#contains ../sReceivingBenefits "Don’t know"}} checked="checked"{{/contains}}{{else}}{{#contains employment.receiving-benefits ""}} checked="checked"{{/contains}}{{/if}}>
            <label for="receiving-benefits-unknown">Don&rsquo;t know<span class="visually-hidden"> if receiving benefits</span></label>
          </div>

        </fieldset>

      </div>

      <div class="form-group form-group-related">
        <button class="button" type="submit">Save</button>
      </div>

      <p><a href="/court-administrator/case-details/{{id}}/">Cancel</a></p>

    </form>

  </div>

</div>

{{/with}}
