{{>breadcrumb}}

  {{#with search}}

  <h1 class="heading-xlarge">{{../pagetitle}}</h1>

  <p class="lede">You can add any of the following, if available.</p>

  <form class="form" method="post" novalidate>

    <div class="form-group">
      <label for="plea-document">
        <span class="form-label-bold">Select plea document</span>
      </label>
      <input id="plea-document" name="pleaDocument" type="file">
    </div>

    <div class="form-group">
      <label for="statement-of-income">
        <span class="form-label-bold">Select statement of income and outgoings (MC100)</span>
      </label>
      <input id="statement-of-income" name="statementIncome" type="file">
    </div>

    <div class="form-group form-group-last">
      <label for="other-documents">
        <span class="form-label-bold">Select other documents</span>
        <span class="form-hint">For example, a bank statement, email or a copy of a travelcard</span>
      </label>
      <input id="other-documents" name="otherDocuments" type="file">
    </div>

    <div class="form-group form-group-related">
      <button class="button" type="submit">Upload and continue</button>
    </div>

    <p><a href="/court-administrator/case-details/{{id}}">Cancel</a></p>

  </form>

{{/with}}
