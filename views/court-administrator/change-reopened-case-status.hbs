{{>breadcrumb}}

{{#with search}}

  {{>court-administrator/persist-info}}

  <h1 class="heading-xlarge">{{../pagetitle}}</h1>

  <form class="form" method="post" novalidate>

    <div class="form-group">

      <fieldset>

        <legend>
          <span class="form-label-bold">Date case was officially reopened in court</span>
          <span class="form-hint" id="date-order-hint">For example, 18 5 2016</span>
        </legend>

        <div class="form-date">

          <div class="form-group form-group-day">
            <label class="form-label" for="date-order-day">Day</label>
            <input class="form-control" id="date-order-day" name="dateOrderDay" type="number" aria-describedby="date-order-hint" value="{{../sDateOrderDay}}">
          </div>

          <div class="form-group form-group-month">
            <label class="form-label" for="date-order-month">Month</label>
            <input class="form-control" id="date-order-month" name="dateOrderMonth" type="number" value="{{../sDateOrderMonth}}">
          </div>

          <div class="form-group form-group-year">
            <label class="form-label" for="date-order-year">Year</label>
            <input class="form-control" id="date-order-year" name="dateOrderYear" type="number" value="{{../sDateOrderYear}}">
          </div>

        </div>

      </fieldset>

    </div>

    <div class="form-group">
      <label for="case-number">
        <span class="form-label-bold">New Libra case number</span>
      </label>
      <input class="form-control" id="case-number" name="caseNumber" type="text" value="{{../sCaseNumber}}">
    </div>

    <div class="form-group">
      <label for="reason-for-reopening">
        <span class="form-label-bold">Reason for reopening</span>
      </label>
      <textarea class="form-control" id="reason-for-reopening" name="reasonForReopening" rows="5">{{../sReasonForReopening}}</textarea>
    </div>

    <ul class="button-actions">
      <li><button class="button" type="submit">Save</button></li>
      <li><a class="button button-secondary" href="/court-administrator/revert-case-status-to-completed/{{id}}">Revert case status to completed</a></li>
    </ul>

    <p><a href="/court-administrator/case-details/{{id}}/">Cancel</a></p>

  </form>

{{/with}}
