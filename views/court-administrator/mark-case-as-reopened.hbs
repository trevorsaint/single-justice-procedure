{{>breadcrumb}}

{{#with search}}

  {{>court-administrator/persist-info}}

  <div class="grid-row">

    <div class="column-two-thirds">

      <h1 class="heading-xlarge">{{../pagetitle}}</h1>

      <p>Make sure this case has been reopened in Libra first, before marking as reopened here.</p>

      <form class="form" method="post" novalidate>

        <div class="form-group">
          <label for="case-number">
            <span class="form-label-bold">New Libra case number</span>
          </label>
          <input class="form-control" id="case-number" name="caseNumber" type="text">
        </div>

        <div class="form-group">
          <label for="reason-for-reopening">
            <span class="form-label-bold">Reason for reopening</span>
          </label>
          <textarea class="form-control form-control-3-4" id="reason-for-reopening" name="reasonForReopening" rows="5"></textarea>
        </div>

        <div class="form-group form-group-related">
          <button class="button" type="submit">Save</button>
        </div>

        <a href="/{{../baseurl}}/case-details/{{id}}/">Cancel</a>

      </form>

    </div>

  </div>

{{/with}}
