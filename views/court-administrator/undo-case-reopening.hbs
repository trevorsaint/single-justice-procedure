{{>breadcrumb}}

{{#with search}}

  {{>court-administrator/persist-info}}

  <div class="grid-row">

    <div class="column-two-thirds">

      <h1 class="heading-xlarge">{{../pagetitle}}</h1>

      <p>This will delete all reopening details.</p>

      <p>Are you sure you want to do this?</p>

      <form class="form" method="post" novalidate>

        <div class="form-group form-group-related">
          <input name="revertCase" type="hidden" value="Yes">
          <button class="button" type="submit">Yes &ndash; confirm</button>
        </div>

        <a href="/{{../baseurl}}/case-details/{{id}}/">Cancel</a>

      </form>

    </div>

  </div>

{{/with}}
