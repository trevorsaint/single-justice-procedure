{{>breadcrumb}}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">{{pagetitle}}</h1>

    <h3 class="heading-medium">Search by date decision made</h3>

    <form class="form" method="post">

      <div class="form-group">

        <fieldset>
          <legend>
            <span class="form-label">From</span>
            <span class="form-hint" id="from-hint">For example, 10 3 2016</span>
          </legend>
          <div class="form-date">
            <div class="form-group form-group-day">
              <label class="form-label" for="from-day">Day</label>
              <input class="form-control" id="from-day" name="fromDay" type="number" value="{{sFromDay}}" aria-describedby="from-hint">
            </div>
            <div class="form-group form-group-month">
              <label class="form-label" for="from-month">Month</label>
              <input class="form-control" id="from-month" name="fromMonth" type="number" value="{{sFromMonth}}">
            </div>
            <div class="form-group form-group-year">
              <label class="form-label" for="from-year">Year</label>
              <input class="form-control" id="from-year" name="fromYear" type="number" value="{{sFromYear}}">
            </div>
          </div>
        </fieldset>

      </div>

      <div class="form-group">

        <fieldset>
          <legend>
            <span class="form-label">To</span>
            <span class="form-hint" id="to-hint">For example, 10 3 2016</span>
          </legend>
          <div class="form-date">
            <div class="form-group form-group-day">
              <label class="form-label" for="to-day">Day</label>
              <input class="form-control" id="to-day" name="toDay" type="number" value="{{sToDay}}" aria-describedby="to-hint">
            </div>
            <div class="form-group form-group-month">
              <label class="form-label" for="to-month">Month</label>
              <input class="form-control" id="to-month" name="toMonth" type="number" value="{{sToMonth}}">
            </div>
            <div class="form-group form-group-year">
              <label class="form-label" for="to-year">Year</label>
              <input class="form-control" id="to-year" name="toYear" type="number" value="{{sToYear}}">
            </div>
          </div>
        </fieldset>

      </div>

      <div class="form-group form-group-related">
        <button class="button" type="submit">Find</button>
      </div>


      {{#if sCases}}

        <div class="panel panel-border-wide">
          <p>0 cases found</p>
        </div>

        <p><a href="{{baseurl}}find-and-print-orders">Reset</a></p>

      {{else}}

        <p><a href="{{baseurl}}home/">Cancel</a></p>

      {{/if}}


    </form>

  </div>

</div>
