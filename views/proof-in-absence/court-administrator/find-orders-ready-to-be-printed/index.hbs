{{>breadcrumb}}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">{{pagetitle}}</h1>

    <form class="form" method="post">

      <div class="form-group">

        <fieldset>
          <legend>
            <span class="form-label">From</span>
            <span class="form-hint" id="from-hint">For example, 10 3 2016</span>
          </legend>
          <div class="form-date">
            <div class="form-group form-group-day">
              <label class="form-label" for="from-day">Day</label>
              <input class="form-control" id="from-day" name="fromDay" type="number" pattern="[0-9]*" min="0" max="31" aria-describedby="from-hint">
            </div>
            <div class="form-group form-group-month">
              <label class="form-label" for="from-month">Month</label>
              <input class="form-control" id="from-month" name="fromMonth" type="number" pattern="[0-9]*" min="0" max="12">
            </div>
            <div class="form-group form-group-year">
              <label class="form-label" for="from-year">Year</label>
              <input class="form-control" id="from-year" name="fromYear" type="number" pattern="[0-9]*" min="0" max="2016">
            </div>
          </div>
        </fieldset>

      </div>

      <div class="form-group">

        <fieldset>
          <legend>
            <span class="form-label">To</span>
            <span class="form-hint" id="to-hint">For example, 18 3 2016</span>
          </legend>
          <div class="form-date">
            <div class="form-group form-group-day">
              <label class="form-label" for="to-day">Day</label>
              <input class="form-control" id="to-day" name="toDay" type="text" pattern="[0-9]*" min="0" max="31" aria-describedby="to-hint">
            </div>
            <div class="form-group form-group-month">
              <label class="form-label" for="to-month">Month</label>
              <input class="form-control" id="to-month" name="toMonth" type="text" pattern="[0-9]*" min="0" max="12">
            </div>
            <div class="form-group form-group-year">
              <label class="form-label" for="to-year">Year</label>
              <input class="form-control" id="to-year" name="toYear" type="text" pattern="[0-9]*" min="0" max="2016">
            </div>
          </div>
        </fieldset>

      </div>

      <div class="form-group form-group-related">
        <button class="button" type="submit">Create</button>
      </div>

      <p><a href="{{baseurl}}home/">Cancel</a></p>

    </form>

  </div>

</div>
