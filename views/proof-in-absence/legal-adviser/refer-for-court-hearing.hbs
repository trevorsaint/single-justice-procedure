{{>breadcrumb}}

{{#with search}}

  {{>legal-adviser/persist-info}}

  <div class="grid-row">

    <div class="column-two-thirds">

      <h1 class="heading-xlarge">{{../pagetitle}}</h1>
      <h2 class="heading-large">Offence 1</h2>
      <h3 class="bold-medium">{{{offence.title}}}</h3>
      <p class="font-xsmall js-text">{{{offence.offence-wording}}}</p>

      <form class="form" method="post">

        <h3 class="heading-medium">Refer for court hearing</h3>

        <div class="form-group">

          <label for="court-location">
            <span class="form-label">Court location</span>
          </label>

          <select class="form-control" id="court-location" name="courtLocation">
            <option>Select</option>
            <option value="1">Lavender Hill</option>
            <option value="2">Wimbledon</option>
            <option value="3">Swansea</option>
          </select>

        </div>

        <div class="form-group">

          <label for="court-room">
            <span class="form-label">Court room</span>
          </label>

          <select class="form-control form-control-1-4" id="court-room" name="courtRoom">
            <option>Select</option>
            <option value="1">01</option>
            <option value="2">02</option>
            <option value="3">03</option>
            <option value="4">04</option>
            <option value="5">05</option>
            <option value="6">06</option>
            <option value="7">07</option>
            <option value="8">08</option>
            <option value="9">09</option>
          </select>

        </div>

        <div class="form-group">

          <fieldset>

            <legend>
              <span class="form-label">Date of hearing</span>
              <span class="form-hint" id="date-of-hearing-hint">For example, 31 3 2017</span>
            </legend>

            <div class="form-date">

              <div class="form-group form-group-day">
                <label class="form-label" for="date-of-hearing-day">Day</label>
                <input class="form-control" id="date-of-hearing-day" type="text" name="dateOfHearingDay" maxlength="2" aria-describedby="date-of-hearing-hint">
              </div>

              <div class="form-group form-group-month">
                <label class="form-label" for="date-of-hearing-month">Month</label>
                <input class="form-control" id="date-of-hearing-month" type="text" name="dateOfHearingMonth" maxlength="2">
              </div>

              <div class="form-group form-group-year">
                <label class="form-label" for="date-of-hearing-year">Year</label>
                <input class="form-control" id="date-of-hearing-year" type="text" name="dateOfHearingYear" maxlength="4">
              </div>

            </div>

          </fieldset>

        </div>

        <div class="form-group">

          <fieldset>

            <legend>
              <span class="form-label">Start time of hearing session</span>
              <span class="form-hint" id="start-time-of-hearing-hint">For example, 13:30</span>
            </legend>

            <div class="form-time">
              <div class="form-group form-group-hour">
                <label class="form-label visually-hidden" for="start-time-of-hearing-hour">Hour</label>
                <input class="form-control" id="start-time-of-hearing-hour" name="startTimeOfHearingHour" type="text" maxlength="2" aria-describedby="start-time-of-hearing-hint">
              </div>

              <div class="form-group form-group-minute">
                <label class="form-label visually-hidden" for="start-time-of-hearing-minute">Minutes</label>
                <input class="form-control" id="start-time-of-hearing-minute" name="startTimeOfHearingMinute" type="text" maxlength="2" >
              </div>

            </div>

          </fieldset>

        </div>

        <div class="form-group form-group-last">

          <fieldset>

            <legend>
              <span class="form-label">Reason for referring to court</span>
            </legend>

            <label class="block-label selection-button-radio" data-target="equivocal-plea">
              <input type="radio" name="reasonForReferring" value="Equivocal plea"> Equivocal plea
            </label>

            <div class="panel panel-border-narrow js-hidden" id="equivocal-plea">

              <fieldset>

                <legend>
                  <span class="form-label">Select</span>
                </legend>

                <label class="block-label selection-button-radio">
                  <input type="radio" name="equivocalPlea" value="Defendant to attend to clarify"> Defendant to attend to clarify
                </label>

                <label class="block-label selection-button-radio">
                  <input type="radio" name="equivocalPlea" value="For trial"> For trial
                </label>

              </fieldset>

            </div>

            <label class="block-label selection-button-radio">
              <input type="radio" name="reasonForReferring" value="Defence request"> Defence request
            </label>

            <label class="block-label selection-button-radio">
              <input type="radio" name="reasonForReferring" value="For trial"> For trial
            </label>

            <label class="block-label selection-button-radio" data-target="case-management-hearing">
              <input type="radio" name="reasonForReferring" value="For a case management hearing"> For a case management hearing
            </label>

            <div class="panel panel-border-narrow js-hidden" id="case-management-hearing">
              <fieldset>

                <legend>
                  <span class="form-label">Select</span>
                </legend>

                <label class="block-label selection-button-radio">
                  <input type="radio" name="caseManagementHearing" value="Defendant to attend"> Defendant to attend
                </label>

                <label class="block-label selection-button-radio">
                  <input type="radio" name="caseManagementHearing" value="No appearance"> No appearance
                </label>

              </fieldset>

            </div>

            <label class="block-label selection-button-radio">
              <input type="radio" name="reasonForReferring" value="Sentencing hearing"> Sentencing hearing
            </label>

            <label class="block-label selection-button-radio">
              <input type="radio" name="reasonForReferring" value="Case unsuitable for SJP"> Case unsuitable for SJP
            </label>

            <label class="block-label selection-button-radio">
              <input type="radio" name="reasonForReferring" value="For disqualification"> For disqualification
            </label>

          </fieldset>

        </div>

        <div class="form-group form-group-related">
          <button class="button" type="submit">Save and continue</button>
        </div>

        <p><a href="/proof-in-absence/legal-adviser/case-details/{{id}}">Back</a></p>

      </form>

    </div>

    <div class="column-third">
      <div class="related">
        {{>legal-adviser/related-documents}}
      </div>
    </div>

  </div>

{{/with}}
