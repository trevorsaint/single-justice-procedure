<div class="related-section">

  <h3 class="related-heading">Documents</h3>

  {{#if casedetails}}

    <ul class="related-links">
      {{#each related-documents.document}}
        {{#compare title  "!="  'previous convictions' }}
        <li>
          <div class="document document-small">
            <i class="icon icon-file-download" aria-hidden="true" role="presentation"></i>
            <div class="document-content">
              <p class="document-title"><a href="{{{file-path}}}" target="_blank" title="{{{capitalize title}}} (opens in a new window)">{{{capitalize title}}}</a></p>
              <div class="document-meta">
                <span class="document-meta-details">{{{file-type}}}, {{{file-size}}}, {{{file-pages}}}</span>
              </div>
            </div>
          </div>
        </li>
        {{/compare}}
      {{/each}}
    </ul>

    {{else}}

    <ul class="related-links">
      {{#each related-documents.document}}
        <li>
          <div class="document document-small">
            <i class="icon icon-file-download" aria-hidden="true" role="presentation"></i>
            <div class="document-content">
              <p class="document-title"><a href="{{{file-path}}}" target="_blank" title="{{{capitalize title}}} (opens in a new window)">{{{capitalize title}}}</a></p>
              <div class="document-meta">
                <span class="document-meta-details">{{{file-type}}}, {{{file-size}}}, {{{file-pages}}}</span>
              </div>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>

  {{/if}}

</div>
