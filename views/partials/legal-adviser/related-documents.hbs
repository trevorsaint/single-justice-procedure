            <div class="document-meta">
              <span class="document-meta-details">{{{file-type}}}, {{{file-size}}}, {{{file-pages}}}</span>
            </div>
          </div>
        </div>
      </li>
      {{/compare}}{{/each}}
    </ul>

  </div>

  {{#each related-documents.document}}{{#compare title  "=="  'previous convictions' }}
