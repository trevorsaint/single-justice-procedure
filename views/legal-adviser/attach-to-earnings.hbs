{{>breadcrumb}}

{{#with search}}

  {{>legal-adviser/persist-info}}

  <div class="grid-row">

    <div class="column-two-thirds">

      <h1 class="heading-xlarge">{{../pagetitle}}</h1>

      {{#if ../sTotalToPay}}
      <div class="panel panel-border-wide">
        <p>Total to pay <br> <b class="bold-medium">&pound;{{../sTotalToPay}}</b></p>
      </div>
      {{/if}}

      <form class="form" method="post">

        <h3 class="heading-medium">Employer details</h3>

        <div class="form-group">
          <label for="employee-number">
            <span class="form-label">Employee number (optional)</span>
          </label>
          <input class="form-control" type="text" id="employee-number" name="employeeNumber" value="{{uppercase employment.employee-number}}">
        </div>

        <div class="form-group">
          <label for="employer-name">
            <span class="form-label">Employer name</span>
          </label>
          <input class="form-control" type="text" id="employer-name" name="employerName" value="{{employment.employer-name}}">
        </div>

        <div class="form-group form-group-compound">
          <label for="employer-address1">
            <span class="form-label">Street</span>
          </label>
          <input class="form-control" type="text" id="employer-address1" name="employerAddress1" value="{{employment.employer-address.address1}}">
        </div>

        <div class="form-group">
          <label class="visually-hidden" for="employer-address2">
            <span class="form-label">Street</span>
          </label>
          <input class="form-control" type="text" id="employer-address2" name="employerAddress2" value="{{employment.employer-address.address2}}">
        </div>

        <div class="form-group">
          <label for="employer-town">
            <span class="form-label">Town or City</span>
          </label>
          <input class="form-control form-control-1-4" type="text" id="employer-town" name="employerTown" value="{{employment.employer-address.town}}">
        </div>

        <div class="form-group">
          <label for="employer-postcode">
            <span class="form-label">Postcode</span>
          </label>
          <input class="form-control form-control-1-4" type="text" id="employer-postcode" name="employerPostcode" value="{{uppercase employment.employer-address.postcode}}">
        </div>

        <h3 class="heading-medium">Reason for attaching to earnings</h3>

        <div class="form-group">

          <fieldset>

            <legend class="visually-hidden">Reason for attaching to earnings</legend>

            <label class="block-label selection-button-radio" for="compensation-ordered">
              <input type="radio" name="reasonForAttachingToEarnings" value="Compensation ordered" checked="checked">
              Compensation ordered
            </label>

            <p class="form-block">or</p>

            <label class="block-label selection-button-radio" for="known-defaulter">
              <input type="radio" name="reasonForAttachingToEarnings" value="Defendant is a know defaulter">
              Defendant is a known defaulter
            </label>

            <label class="block-label selection-button-radio" for="defendant-requested">
              <input type="radio" name="reasonForAttachingToEarnings" value="Defendant requested this">
              Defendant requested this
            </label>

          </fieldset>

        </div>

        <h3 class="heading-medium">Set reserve terms</h3>

        <div class="form-group form-group-last">

          <fieldset>

            <legend class="visually-hidden">Set reserve terms</legend>

            <label class="block-label selection-button-radio">
              <input type="radio" name="reserveTerms" value="Lump sum within 14 days"
              {{#if ../sReserveTerms}}
                {{#contains ../sReserveTerms "Lump sum within 14 days"}} checked="checked"{{/contains}}
              {{else}}
                {{#contains offence.reserve-terms "Lump sum within 14 days"}} checked="checked"{{/contains}}
              {{/if}}>
              Lump sum within 14 days
            </label>

            <p class="form-block">or</p>

            <label class="block-label selection-button-radio">
              <input type="radio" name="reserveTerms" value="Lump sum within 28 days"
              {{#if ../sReserveTerms}}
                {{#contains ../sReserveTerms "Lump sum within 28 days"}} checked="checked"{{/contains}}
              {{else}}
                {{#contains offence.reserve-terms "Lump sum within 28 days"}} checked="checked"{{/contains}}
              {{/if}}>
              Lump sum within 28 days
            </label>

            <label class="block-label selection-button-radio" data-target="lump-sum-plus-instalments">
              <input type="radio" name="reserveTerms" value="Lump sum plus instalments"
              {{#if ../sReserveTerms}}
                {{#contains ../sReserveTerms "Lump sum plus instalments"}} checked="checked"{{/contains}}
              {{else}}
                {{#contains offence.reserve-terms "Lump sum plus instalments"}} checked="checked"{{/contains}}
              {{/if}}>
              Lump sum plus instalments
            </label>

            <div class="panel panel-border-narrow{{#isnt ../sReserveTerms "Lump sum plus instalments"}} js-hidden{{/isnt}}" id="lump-sum-plus-instalments">

              <div class="form-group">
                <label for="lump-sum-amount">
                  <span class="form-label">Lump sum amount</span>
                </label>
                <div class="form-currency">
                  <input class="form-control form-control-1-4" type="text" id="lump-sum-amount" name="lumpSumAmount"{{#if ../sLumpSumAmount}} value="{{../sLumpSumAmount}}"{{/if}}>
                </div>
              </div>

              <div class="form-group">
                <label for="lump-sum-instalment-amount">
                  <span class="form-label">Instalment amount</span>
                </label>
                <div class="form-currency">
                  <input class="form-control form-control-1-4" type="text" id="lump-sum-instalment-amount" name="lumpSumInstalmentAmount"{{#if ../sLumpSumInstalmentAmount}} value="{{../sLumpSumInstalmentAmount}}"{{/if}}>
                </div>
              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">How often should instalments be made?</span>
                  </legend>

                  <label class="block-label selection-button-radio">
                    <input type="radio" name="lumpSumInstalmentMade" value="Weekly"{{#contains ../sLumpSumInstalmentMade "Weekly"}} checked="checked"{{/contains}}> Weekly
                  </label>

                  <label class="block-label selection-button-radio">
                    <input type="radio" name="lumpSumInstalmentMade" value="Fortnightly"{{#contains ../sLumpSumInstalmentMade "Fortnightly"}} checked="checked"{{/contains}}> Fortnightly
                  </label>

                  <label class="block-label selection-button-radio">
                    <input type="radio" name="lumpSumInstalmentMade" value="Monthly"{{#contains ../sLumpSumInstalmentMade "Monthly"}} checked="checked"{{/contains}}> Monthly
                  </label>

                </fieldset>

              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">Instalment start date</span>
                    <span class="form-hint" id="lump-sum-instalment-start-date-hint">For example, 31 3 2017</span>
                  </legend>

                  <div class="form-date">

                    <div class="form-group form-group-day">
                      <label class="form-label" for="lump-sum-instalment-start-date-day">Day</label>
                      <input class="form-control" type="text" id="lump-sum-instalment-start-date-day" name="lumpSumInstalmentStartDateDay"{{#if ../sLumpSumInstalmentStartDateDay}} value="{{../sLumpSumInstalmentStartDateDay}}"{{/if}} aria-describedby="lump-sum-instalment-start-date-hint">
                    </div>

                    <div class="form-group form-group-month">
                      <label class="form-label" for="lump-sum-instalment-start-date-month">Month</label>
                      <input class="form-control" type="text" id="lump-sum-instalment-start-date-month" name="lumpSumInstalmentStartDateMonth"{{#if ../sLumpSumInstalmentStartDateMonth}} value="{{../sLumpSumInstalmentStartDateMonth}}"{{/if}}>
                    </div>

                    <div class="form-group form-group-year">
                      <label class="form-label" for="lump-sum-instalment-start-date-year">Year</label>
                      <input class="form-control" type="text" id="lump-sum-instalment-start-date-year" name="lumpSumInstalmentStartDateYear"{{#if ../sLumpSumInstalmentStartDateYear}} value="{{../sLumpSumInstalmentStartDateYear}}"{{/if}}>
                    </div>

                  </div>

                </fieldset>

              </div>

            </div>

            <label class="block-label selection-button-radio" data-target="instalments-only">
              <input type="radio" name="reserveTerms" value="Instalments only"
              {{#if ../sReserveTerms}}
                {{#contains ../sReserveTerms "Instalments only"}} checked="checked"{{/contains}}
              {{else}}
                {{#contains offence.reserve-terms "Instalments only"}} checked="checked"{{/contains}}
              {{/if}}>
              Instalments only
            </label>

            <div class="panel panel-border-narrow{{#isnt ../sReserveTerms "Instalments only"}} js-hidden{{/isnt}}" id="instalments-only">

              <div class="form-group">
                <label for="instalment-only-amount">
                  <span class="form-label">Instalment amount</span>
                </label>
                <div class="form-currency">
                  <input class="form-control form-control-1-4" type="text" id="instalment-only-amount" name="instalmentOnlyAmount"{{#if ../sInstalmentOnlyAmount}} value="{{../sInstalmentOnlyAmount}}"{{/if}}>
                </div>
              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">How often should instalments be made?</span>
                  </legend>

                  <label class="block-label selection-button-radio">
                    <input type="radio" name="instalmentOnlyMade" value="Weekly"{{#contains ../sInstalmentOnlyMade "Weekly"}} checked="checked"{{/contains}}> Weekly
                  </label>

                  <label class="block-label selection-button-radio">
                    <input type="radio" name="instalmentOnlyMade" value="Fortnightly"{{#contains ../sInstalmentOnlyMade "Fortnightly"}} checked="checked"{{/contains}}> Fortnightly
                  </label>

                  <label class="block-label selection-button-radio">
                    <input type="radio" name="instalmentOnlyMade" value="Monthly"{{#contains ../sInstalmentOnlyMade "Monthly"}} checked="checked"{{/contains}}> Monthly
                  </label>

                </fieldset>

              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">Instalment start date</span>
                    <span class="form-hint" id="instalment-only-start-date-hint">For example, 31 3 2017</span>
                  </legend>

                  <div class="form-date">

                    <div class="form-group form-group-day">
                      <label class="form-label" for="instalment-only-start-date-day">Day</label>
                      <input class="form-control" type="text" id="instalment-only-start-date-day" name="instalmentOnlyStartDateDay"{{#if ../sInstalmentOnlyStartDateDay}} value="{{../sInstalmentOnlyStartDateDay}}"{{/if}} aria-describedby="instalment-only-start-date-hint">
                    </div>

                    <div class="form-group form-group-month">
                      <label class="form-label" for="instalment-only-start-date-month">Month</label>
                      <input class="form-control" type="text" id="instalment-only-start-date-month" name="instalmentOnlyStartDateMonth"{{#if ../sInstalmentOnlyStartDateMonth}} value="{{../sInstalmentOnlyStartDateMonth}}"{{/if}}>
                    </div>

                    <div class="form-group form-group-year">
                      <label class="form-label" for="instalment-only-start-date-year">Year</label>
                      <input class="form-control" type="text" id="instalment-only-start-date-year" name="instalmentOnlyStartDateYear"{{#if ../sInstalmentOnlyStartDateYear}} value="{{../sInstalmentOnlyStartDateYear}}"{{/if}}>
                    </div>

                  </div>

                </fieldset>

              </div>

            </div>

          </fieldset>

        </div>

        <div class="form-group form-group-related">
          <button class="button" type="submit">Save and continue</button>
        </div>

        <p><a href="{{../sBack}}">Cancel</a><p>

      </form>

    </div>

    <div class="column-third">
      <div class="related">
        {{>legal-adviser/related-documents}}
      </div>
    </div>

  </div>

{{/with}}
