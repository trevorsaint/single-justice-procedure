{{>breadcrumb}}

{{#with search}}


  {{>legal-adviser/persist-info}}


  <h1 class="heading-xlarge">{{../pagetitle}}</h1>


  <div class="check-answers" aria-labelledby="decision">

    <h2 class="heading-medium" id="decision">Offence 1 decision</h2>

    <table class="table">
      <tbody>
        <tr>
          <th>Type</th>
          <td>{{{offence.title}}}</td>
        </tr>
        <tr>
          <th>Verdict</th>
          <td>{{{offence.verdict}}}</td>
        </tr>
        <tr>
          <th>Result</th>
          <td>{{../sMakeDecision}}</td>
        </tr>
      </tbody>
    </table>

    <p class="check-answers-action"><a href="{{../baseurl}}case-details/{{id}}/#decision">Change<span class="visually-hidden"> &ldquo;Offence 1 decision&rdquo;.</span></a></p>

  </div>


  {{#contains ../sMakeDecision "Financial penalty"}}
  <div class="check-answers" aria-labelledby="outcome">

    <h2 class="heading-medium" id="outcome">Outcome</h2>

    <table class="table">
      <tbody>
        <tr>
          <th>Defendant&rsquo;s weekly income</th>
          <td>&pound;{{offence.weekly-income}}{{#if offence.weekly-income-assumed}} (assumed){{/if}}</td>
        </tr>
        <tr>
          <th>Fine band applied</th>
          <td>{{../sFineBandApplied}}</td>
        </tr>
        <tr>
          <th>Fine</th>
          <td>
            {{#if ../sFineA}}
              &pound;{{../sFineA}}
            {{else if ../sFineB}}
              &pound;{{../sFineB}}
            {{else if ../sFineC}}
              &pound;{{../sFineC}}
            {{/if}}
          </td>
        </tr>
        <tr>
          <th>Compensation</th>
          <td>
            {{#if ../sCompensationA}}
              &pound;{{../sCompensationA}}
            {{else if ../sCompensationB}}
              &pound;{{../sCompensationB}}
            {{else if ../sCompensationC}}
              &pound;{{../sCompensationC}}
            {{/if}}
          </td>
        </tr>
        {{#or ../sReasonForNoCompensationA ../sReasonForNoCompensationB ../sReasonForNoCompensationC}}
        <tr>
          <th>Reason for no compensation</th>
          <td>
            {{#if ../sReasonForNoCompensationA}}
              {{../sReasonForNoCompensationA}}
            {{else if ../sReasonForNoCompensationB}}
              {{../sReasonForNoCompensationB}}
            {{else if ../sReasonForNoCompensationC}}
              {{../sReasonForNoCompensationC}}
            {{/if}}
          </td>
        </tr>
        {{/or}}
      </tbody>
    </table>

    <p class="check-answers-action"><a href="{{../baseurl}}financial-penalty/{{id}}/?change=true">Change<span class="visually-hidden"> &ldquo;Outcome&rdquo;.</span></a></p>

  </div>
  {{/contains}}


