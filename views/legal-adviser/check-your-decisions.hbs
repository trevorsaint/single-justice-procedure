  {{#is ../sMakeDecision "Refer for court hearing"}}
  <div class="check-answers" aria-labelledby="refer-for-court-hearing">

    <h2 class="heading-medium" id="refer-for-court-hearing">Outcome &ndash; refer for court hearing</h2>

    <table class="table">
      <tbody>
        <tr>
          <th>Refer to which court?</th>
          <td>{{../sCourtLocation}}</td>
        </tr>
        <tr>
          <th>Court room</th>
          <td>{{../sCourtRoom}}</td>
        </tr>
        <tr>
          <th>Date of hearing</th>
          <td><time datetime="{{moment ../sDateOfHearing format="YYYY-MM-DD"}}">{{moment ../sDateOfHearing format="D MMMM YYYY"}}</time></td>
        </tr>
        <tr>
          <th>Start time of hearing session</th>
          <td>1:30pm</td>
        </tr>
        <tr>
          <th>Reason for referring to court</th>
          <td>

            {{#is ../sReasonForReferring "Equivocal plea" }}
              {{../sReasonForReferring}} &ndash; {{../sEquivocalPlea}}
            {{else}}
              {{#is ../sReasonForReferring "For case management hearing" }}
                {{../sReasonForReferring}} &ndash; {{../sCaseManagementHearing}}
              {{else}}
                 {{../sReasonForReferring}}
               {{/is}}
             {{/is}}

          </td>
        </tr>
      </tbody>
    </table>

    <p class="check-answers-action"><a href="{{../baseurl}}refer-for-court-hearing/{{id}}/?change=true">Change<span class="visually-hidden"> &ldquo;Refer for court hearing&rdquo;.</span></a></p>

