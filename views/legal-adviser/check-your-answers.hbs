{{>breadcrumb}}

{{#with search}}

<div class="persist-info">
  <div class="persist-info-content">
    <span class="persist-info-reference">{{personal-details.urn}}</span>
    <span class="persist-info-title"><b>{{personal-details.firstname}} {{uppercase personal-details.lastname}}</b></span>
  </div>
  <ul class="persist-info-links">
    <li><a href="/legal-adviser/end-session/">End session</a></li>
  </ul>
</div>

  <h1 class="heading-xlarge">{{../pagetitle}}</h1>

  <!-- offence 1 -->
  <h2 class="heading-medium">Passenger used ticket issued for another person</h2>
  <table class="table table-summary">
    <tbody>
      <tr>
        <td class="table-summary-title">Decision</td>
        <td>
          {{#if ../sMakeDecision}}
            {{../sMakeDecision}}
          {{else}}
            {{#if offence.decision}}
              {{offence.decision}}
            {{else}}
              &ndash;
            {{/if}}
          {{/if}}
        </td>
        <td class="table-cell-action"><a href="/legal-adviser/case-details/{{id}}/#offence-decision" title="Change make a decision">Change<span class="visually-hidden"> make a decision</span></a></td>
      </tr>
      <tr>
        <td class="table-summary-title">Defendant&rsquo;s weekly income</td>
        <td colspan="2">&pound;440 (assumed)</td>
      </tr>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Fine band applied</td>
        <td>
          {{#if ../sFineBandApplied}}
            {{../sFineBandApplied}}
          {{else}}
            {{#if offence.fine-band-applied}}
              {{offence.fine-band-applied}}
            {{else}}
              &ndash;
            {{/if}}
          {{/if}}
        </td>
        <td class="table-cell-action"><a href="/legal-adviser/continue-decisions/{{id}}/?change=true/#fine-and-compensation" title="Change fine and compensation">Change<span class="visually-hidden"> and compensation</span></a></td>
      </tr>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Fine</td>
        <td colspan="2">
          {{#if ../sFineA}}
            {{../sFineA}}
          {{else if ../sFineB}}
            {{../sFineB}}
          {{else if ../sFineC}}
            {{../sFineC}}
          {{else}}
            {{#if offence.fine}}
              {{offence.fine}}
            {{else}}
              &ndash;
            {{/if}}
          {{/if}}
        </td>
      </tr>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Compensation</td>
        <td colspan="2">
          {{#if ../sCompensationA}}
            {{../sCompensationA}}
          {{else if ../sCompensationB}}
            {{../sCompensationB}}
          {{else if ../sCompensationC}}
            {{../sCompensationC}}
          {{else}}
            {{#if offence.compensation}}
              {{offence.compensation}}
            {{else}}
              &ndash;
            {{/if}}
          {{/if}}
        </td>
      </tr>
    </tbody>
  </table>
  <!-- end offence 1 -->


  <hr class="divider divider-border-dark"></hr>


  <!-- costs and surcharge -->
  <h2 class="heading-medium">Costs and surcharge</h2>
  <table class="table table-summary">
    <tbody>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Costs</td>
        <td>
          {{#if ../sCost}}
            &pound;{{../sCost}}
          {{else}}
            &pound;{{offence.cost}}
          {{/if}}
        </td>
        <td class="table-cell-action"><a href="/legal-adviser/continue-decisions/{{id}}/?change=true/#costs-and-surcharge" title="Change cost and surcharge">Change <span class="visually-hidden">cost and surcharge</span></a></td>
      </tr>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Surcharge and victim fund</td>
        <td colspan="2">
          {{#if ../sSurcharge}}
            &pound;{{../sSurcharge}}
          {{else}}
            &pound;{{offence.surcharge}}
          {{/if}}
        </td>
      </tr>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Collection order issued</td>
        <td colspan="2">
          {{#if ../sCollectionOrderConfirmed}}
            {{#contains ../sCollectionOrderConfirmed "true"}}Yes{{else}}No{{/contains}}
          {{else}}
            {{#contains offence.collection-order-confirmed "true"}}Yes{{else}}No{{/contains}}
          {{/if}}
        </td>
      </tr>
    </tbody>
  </table>
  <!-- end costs and surcharge -->


  <hr class="divider divider-border-dark" aria-hidden="true">


  <!-- collection and payment -->
  <h2 class="heading-medium">Collection and payment</h2>
  <table class="table table-summary">

    {{#is ../sPaymentMethod "Pay direct to court"}}
    <tbody>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Payment method</td>
        <td>
          {{#if ../sPaymentMethod}}
            {{../sPaymentMethod}}
          {{else}}
            {{offence.payment-method}}
          {{/if}}
        </td>
        <td class="table-cell-action"><a href="/legal-adviser/payment-method/{{id}}/?change=true/#collection-payment">Change<span class="visually-hidden"> payment method</span></a></td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Reason you didn&rsquo;t deduct from benefits?</td>
        <td>
          {{#if ../sReasonForNotDeductFromBenefitsOrAttachToEarnings}}
            {{../sReasonForNotDeductFromBenefitsOrAttachToEarnings}}
          {{else}}
            {{offence.reason-for-not-deducting-from-benefits}}
          {{/if}}
        </td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">How should defendant pay the court?</td>
        <td>
          {{#if ../sDefendantPay}}
            {{../sDefendantPay}}
          {{else}}
            {{offence.defendant-pay}}
          {{/if}}
        </td>
      </tr>

      {{#is ../sDefendantPay "Lump sum plus instalments"}}
      <tr class="table-row-noborder">
        <td class="table-summary-title">Amount to be paid</td>
        <td colspan="2">&pound;{{../sLumpSumAmount}} (within {{../sLumpSumPaidWithin}})</td>
      </tr>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Instalment amount</td>
        <td colspan="2">&pound;{{../sLumpSumInstalmentAmount}} ({{../sLumpSumInstalmentMade}}) starting on 16 December 2017</td>
      </tr>
      {{/is}}

      {{#is ../sDefendantPay "Instalments only"}}
      <tr class="table-row-noborder">
        <td class="table-summary-title">Instalment amount</td>
        <td colspan="2">&pound;50.00 (weekly) starting on 16 December 2017</td>
      </tr>
      {{/is}}

    </tbody>
    {{/is}}

    {{#is ../sPaymentMethod "Deduct from benefits"}}
    <tbody>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Payment method</td>
        <td>
          {{#if ../sPaymentMethod}}
            {{../sPaymentMethod}}
          {{else}}
            {{offence.payment-method}}
          {{/if}}
        </td>
        <td class="table-cell-action"><a href="/legal-adviser/payment-method/{{id}}/?change=true/#collection-payment">Change<span class="visually-hidden"> payment method</span></a></td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">National Insurance number</td>
        <td colspan=2"">
          {{#if ../sNationalInsuranceNumber}}
            {{../sNationalInsuranceNumber}}
          {{else}}
            {{employment.national-insurance-number}}
          {{/if}}
        </td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Reason for deducting from benefits</td>
        <td colspan="2">
          {{#if ../sReasonForDeductingFromBenefits}}
            {{../sReasonForDeductingFromBenefits}}
          {{else}}
            {{offence.reason-for-deducting-from-benefits}}
          {{/if}}
        </td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Reserve terms</td>
        <td colspan="2">
          {{#if ../sReserveTerms}}
            {{../sReserveTerms}}
          {{else}}
            {{offence.reserve-terms}}
          {{/if}}
        </td>
      </tr>

      {{#is ../sReserveTerms "Lump sum plus instalments"}}
      <tr class="table-row-noborder">
        <td class="table-summary-title">Amount to be paid</td>
        <td colspan="2">&pound;{{../sLumpSumAmount}} (within {{../sLumpSumPaidWithin}})</td>
      </tr>
      <tr class="table-row-noborder">
        <td class="table-summary-title">Instalment amount</td>
        <td colspan="2">&pound;{{../sLumpSumInstalmentAmount}} ({{../sLumpSumInstalmentMade}}) starting on 16 December 2017</td>
      </tr>
      {{/is}}

      {{#is ../sReserveTerms "Instalments only"}}
      <tr class="table-row-noborder">
        <td class="table-summary-title">Instalment amount</td>
        <td colspan="2">&pound;{{../sInstalmentOnlyAmount}} ({{../sInstalmentOnlyMade}}) starting on 16 December 2017</td>
      </tr>
      {{/is}}

    </tbody>
    {{/is}}

    {{#is ../sPaymentMethod "Attach to earnings"}}
    <tbody>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Payment method</td>
        <td>
          {{#if ../sPaymentMethod}}
            {{../sPaymentMethod}}
          {{else}}
            {{offence.payment-method}}
          {{/if}}
        </td>
        <td class="table-cell-action"><a href="/legal-adviser/payment-method/{{id}}/?change=true/#collection-payment">Change<span class="visually-hidden"> payment method</span></a></td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Employee number</td>
        <td colspan="2">
          {{#if ../sEmployeeNumber}}
            {{../sEmployeeNumber}}
          {{else}}
            {{employment.employee-number}}
          {{/if}}
        </td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Employer name</td>
        <td colspan="2">
          {{#if ../sEmployerName}}
            {{../sEmployerName}}
          {{else}}
            {{employment.employer-name}}
          {{/if}}
        </td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Employer address</td>
        <td colspan="2">
          {{#if ../sEmployerAddress1}}
            {{#if ../sEmployerAddress1}}{{../sEmployerAddress1}} <br>{{/if}}
            {{#if ../sEmployerAddress2}}{{../sEmployerAddress2}} <br>{{/if}}
            {{#if ../sEmployerTown}}{{../sEmployerTown}}<br> {{/if}}
            {{#if ../sEmployerPostcode}}{{../sEmployerPostcode}}{{/if}}
          {{else}}
            {{#if employment.employer-address.address1}}{{employment.employer-address.address1}}<br>{{/if}}
            {{#if employment.employer-address.address2}}{{employment.employer-address.address2}}<br>{{/if}}
            {{#if employment.employer-address.town}}{{employment.employer-address.town}}<br>{{/if}}
            {{#if employment.employer-address.postcode}}{{employment.employer-address.postcode}}{{/if}}
          {{/if}}
        </td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Reason for attaching to earnings</td>
        <td colspan="2">
          {{#if ../reasonForAttachingToEarnings}}
            {{../reasonForAttachingToEarnings}}
          {{else}}
            {{offence.reason-for-attaching-to-earnings}}
          {{/if}}
        </td>
      </tr>

      <tr class="table-row-noborder">
        <td class="table-summary-title">Reserve terms</td>
        <td colspan="2">
          {{#if ../sReservedTerms}}
            {{../sReservedTerms}}
          {{else}}
            {{offence.reserve-terms}}
          {{/if}}
        </td>
      </tr>

    </tbody>
    {{/is}}

  </table>
  <!-- end -->


  <hr class="divider divider-border-dark" aria-hidden="true">


  <section class="check-answers" aria-labelledby="decision">

    <h2 class="heading-medium" id="decision">Add a note (optional)</h2>

    <p class="text">Only add if you have important information you couldn&rsquo;t enter elsewhere. The details you enter may be shown publicly, for example to the defendant.</p>

    <form class="form" method="post">

      <div class="form-group">
        <label for="notes" class="visually-hidden">
          <span class="form-label">Notes (optional)</span>
        </label>
        <textarea class="form-control form-control-textarea" id="notes" name="notes" rows="5" cols="60"></textarea>
      </div>

      <div class="form-group form-group-related">
        <button class="button" type="submit">Confirm and submit</button>
      </div>

      <p><a href="{{../sBack}}">Back</a></p>

    </form>

  </section>

{{/with}}
