{{>breadcrumb}}

<p>Reason for deducting benefit: {{sReasonForDeductingFromBenefits}}</p>
<p>Set reserved terms: {{sReserveTerms}}</p>

{{#with search}}

  <div class="persist-info">
    <div class="persist-info-content">
      <span class="persist-info-reference">{{personal-details.urn}}</span>
      <span class="persist-info-title"><b>{{personal-details.firstname}} {{uppercase personal-details.lastname}}</b></span>
    </div>
    <ul class="persist-info-links">
      <li><a href="/legal-adviser/end-session/">End session</a></li>
    </ul>
  </div>

  <div class="grid-row">

    <div class="column-two-thirds">

      <h1 class="heading-xlarge">{{../pagetitle}}</h1>

      <form class="form" method="post">

        <h3 class="heading-medium">Defendant&rsquo;s details</h3>

        <div class="form-group">
          <label for="national-insurance-number">
            <span class="form-label">National Insurance number</span>
            <span class="form-hint" id="national-insurance-number-hint">For example, VO 12 34 56 D</span>
          </label>
          <input class="form-control" type="text" id="national-insurance-number" name="nationalInsuranceNumber" value="{{employment.national-insurance-number}}" aria-describedby="defendants-national-insurance-number">
        </div>

        <h3 class="heading-medium">Reason for deducting from benefits</h3>

        <div class="form-group">

          <fieldset>

            <legend class="visuallyhidden">Reason for deducting from benefits</legend>

            <label class="block-label" for="compensation-ordered">
              <input type="radio" id="compensation-ordered" name="reasonForDeductingFromBenefits" value="Compensation ordered">
              Compensation ordered
            </label>

            <p class="form-block">or</p>

            <label class="block-label" for="known-defaulter">
              <input id="known-defaulter" type="radio" name="reasonForDeductingFromBenefits" value="Defendant is a know defaulter">
              Defendant is a known defaulter
            </label>

            <label class="block-label" for="defendant-requested">
              <input id="defendant-requested" type="radio" name="reasonForDeductingFromBenefits" value="Defendant requested this">
              Defendant requested this
            </label>

          </fieldset>

        </div>

        <h3 class="heading-medium">Set reserve terms</h3>

        <div class="form-group form-group-last">

          <fieldset>

            <legend class="visuallyhidden">Set reserve terms</legend>

            <label class="block-label">
              <input type="radio" name="reserveTerms" value="Lump sum 14 days" checked="checked">
              Lump sum 14 days
            </label>

            <p class="form-block">or</p>

            <label class="block-label">
              <input type="radio" name="reserveTerms" value="Lump sum 28 days">
              Lump sum 28 days
            </label>

            <label class="block-label" data-target="lump-sum-plus-instalments">
              <input type="radio" name="reserveTerms" value="Lump sum plus instalments">
              Lump sum plus instalments
            </label>

            <div class="panel panel-border-narrow js-hidden" id="lump-sum-plus-instalments">

              <div class="form-group">
                <label for="lump-sum-amount">
                  <span class="form-label">Amount</span>
                </label>
                <div class="form-currency">
                  <input class="form-control form-control-1-4" type="text" id="lump-sum-amount" name="lumpSumAmount" value="">
                </div>
              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">To be paid within</span>
                  </legend>

                  <label class="block-label">
                    <input type="radio" name="lumpSumAmountPaidWithin" value="14 days"> 14 days
                  </label>

                  <label class="block-label">
                    <input type="radio" name="lumpSumAmountPaidWithin" value="28 days"> 28 days
                  </label>

                  <label class="block-label">
                    <input type="radio" name="lumpSumAmountPaidWithin" value="Other"> Other
                  </label>

                </fieldset>

              </div>

              <div class="form-group">
                <label for="lump-sum-instalment-amount">
                  <span class="form-label">Instalment amount</span>
                </label>
                <div class="form-currency">
                  <input class="form-control form-control-1-4" type="text" id="lump-sum-instalment-amount" name="lumpSumInstalmentAmount" value="">
                </div>
              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">How often should instalments be made?</span>
                  </legend>

                  <label class="block-label">
                    <input type="radio" name="lumpSumInstalmentsMade" value="Weekly"> Weekly
                  </label>

                  <label class="block-label">
                    <input type="radio" name="lumpSumInstalmentsMade" value="Fortnightly"> Fortnightly
                  </label>

                  <label class="block-label">
                    <input type="radio" name="lumpSumInstalmentsMade" value="Monthly"> Monthly
                  </label>

                </fieldset>

              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">Instalment start date</span>
                    <span class="form-hint" id="lump-sum-instalment-start-date-hint">For example, 31 3 2017</span>
                  </legend>

                  <div class="form-date">

                    <div class="form-group form-group-day">
                      <label class="form-label" for="lump-sum-instalment-start-date-day">Day</label>
                      <input class="form-control" type="text" id="lump-sum-instalment-start-date-day" name="lumpSumInstalmentStartDateDay" aria-describedby="lump-sum-instalment-start-date-hint">
                    </div>

                    <div class="form-group form-group-month">
                      <label class="form-label" for="lump-sum-instalment-start-date-month">Month</label>
                      <input class="form-control" type="text" id="lump-sum-instalment-start-date-month" name="lumpSumInstalmentStartDateMonth">
                    </div>

                    <div class="form-group form-group-year">
                      <label class="form-label" for="lump-sum-instalment-start-date-year">Year</label>
                      <input class="form-control" type="text" id="lump-sum-instalment-start-date-year" name="lumpSumInstalmentStartDateYear">
                    </div>

                  </div>

                </fieldset>

              </div>

            </div>

            <label class="block-label" data-target="lump-sum-instalments-only">
              <input type="radio" name="reserveTerms" value="Instalments only">
              Instalments only
            </label>

            <div class="panel panel-border-narrow js-hidden" id="lump-sum-instalments-only">

              <div class="form-group">
                <label for="instalment-amount">
                  <span class="form-label">Instalment amount</span>
                </label>
                <div class="form-currency">
                  <input class="form-control form-control-1-4" type="text" id="instalment-amount" name="instalmentAmount" value="">
                </div>
              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">How often should instalments be made?</span>
                  </legend>

                  <label class="block-label">
                    <input type="radio" name="instalmentsMade" value="Weekly"> Weekly
                  </label>

                  <label class="block-label">
                    <input type="radio" name="instalmentsMade" value="Fortnightly"> Fortnightly
                  </label>

                  <label class="block-label">
                    <input type="radio" name="instalmentsMade" value="Monthly"> Monthly
                  </label>

                </fieldset>

              </div>

              <div class="form-group">

                <fieldset>

                  <legend>
                    <span class="form-label">Instalment start date</span>
                    <span class="form-hint" id="instalment-start-date-hint">For example, 31 3 2017</span>
                  </legend>

                  <div class="form-date">

                    <div class="form-group form-group-day">
                      <label class="form-label" for="instalment-start-date-day">Day</label>
                      <input class="form-control" type="text" id="instalment-start-date-day" name="instalmentStartDateDay" aria-describedby="instalment-start-date-hint">
                    </div>

                    <div class="form-group form-group-month">
                      <label class="form-label" for="instalment-start-date-month">Month</label>
                      <input class="form-control" type="text" id="instalment-start-date-month" name="instalmentStartDateMonth">
                    </div>

                    <div class="form-group form-group-year">
                      <label class="form-label" for="instalment-start-date-year">Year</label>
                      <input class="form-control" type="text" id="instalment-start-date-year" name="instalmentStartDateYear">
                    </div>

                  </div>

                </fieldset>

              </div>

            </div>

          </fieldset>

        </div>

        <div class="form-group form-group-related">
          <button class="button" type="submit">Save and continue</button>
        </div>

        <p><a href="{{../sBack}}">Back</a><p>

      </form>

    </div>

    <div class="column-third">

      <div class="related">

        <h3 class="bold-medium">Weekly income</h3>
        <p>&pound;440 (assumed)</p>

        <div class="related-section">
          <h3 class="related-heading">Documents</h3>
          <ul class="related-links">
            {{#each related-documents.document}}
              {{#is show true}}
                <li>
                  <div class="document document-small">
                    <i class="icon icon-file-download"></i>
                    <div class="document-content">
                      <p class="document-title"><a href="#">{{{capitalize title}}}</a></p>
                        <div class="document-meta">
                          <span class="document-meta-details">
                            {{{file-type}}}, {{{file-size}}}, {{{file-pages}}} {{#if printed-for-posting}}<br> <time datetime="{{printed-for-posting-iso}}">{{printed-for-posting}}</time>{{/if}}
                        </span>
                      </div>
                    </div>
                  </div>
                </li>
              {{/is}}
            {{/each}}
          </ul>
        </div>

      </div>

    </div>

  </div>

{{/with}}
